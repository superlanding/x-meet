#!/bin/bash

# 確保在專案根目錄
cd "$(dirname "$0")/.."

# 檢查 node_modules 是否存在
if [ ! -d "node_modules" ]; then
    echo "正在安裝依賴..."
    npm install
fi

# 獲取當前版本
VERSION=$(node -p "require('./package.json').version")

# 獲取作業系統
OS=$(uname -s)

# 顯示打包資訊
echo "正在打包 X-Meet v${VERSION}..."
echo "作業系統: ${OS}"

# 執行打包
npm run build

# 檢查打包結果
if [ $? -eq 0 ]; then
    echo "打包完成！"
    echo "輸出目錄: dist/"
    
    # 根據作業系統顯示具體的輸出檔案
    case $OS in
        "Darwin")
            echo "macOS 安裝檔: dist/X-Meet-${VERSION}.dmg"
            ;;
        "Linux")
            echo "Linux 安裝檔: dist/X-Meet-${VERSION}.AppImage"
            ;;
        "MINGW"*|"MSYS"*|"CYGWIN"*)
            echo "Windows 安裝檔: dist/X-Meet Setup ${VERSION}.exe"
            ;;
        *)
            echo "未知作業系統"
            ;;
    esac
else
    echo "打包失敗！"
    exit 1
fi 